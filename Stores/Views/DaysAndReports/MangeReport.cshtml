    <br />
    @using (Ajax.BeginForm("SearchManage", "DaysAndReports", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "replace" }))
    {

        <div class="fatora">
            <fieldset id="SubmitForm">
                <table style="text-align:center">
                    <thead>
                        <tr>
                            <th>
                                الموظف
